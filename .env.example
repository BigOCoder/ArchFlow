# ArchFlow Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ==============================================================================
# API Configuration
# ==============================================================================

# Base URL for the ArchFlow backend API
# Development: http://localhost:8080/api
# Staging: https://staging-api.archflow.com/api
# Production: https://api.archflow.com/api
API_BASE_URL=http://localhost:8080/api

# API version (if your backend uses versioned APIs)
API_VERSION=v1

# API timeout in milliseconds
API_TIMEOUT=30000

# ==============================================================================
# Authentication
# ==============================================================================

# JWT token refresh threshold (in seconds before expiry)
TOKEN_REFRESH_THRESHOLD=300

# ==============================================================================
# External Services (Future integrations)
# ==============================================================================

# GitHub OAuth (for GitHub integration)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_REDIRECT_URI=archflow://auth/github/callback

# AI Service Configuration
AI_SERVICE_URL=https://ai.archflow.com
AI_API_KEY=your_ai_api_key_here

# ==============================================================================
# Feature Flags
# ==============================================================================

# Enable/disable features during development
FEATURE_AI_REQUIREMENTS=true
FEATURE_ARCHITECTURE_GEN=true
FEATURE_GITHUB_INTEGRATION=false
FEATURE_LEARNING_MODE=true

# ==============================================================================
# Debug & Logging
# ==============================================================================

# Enable debug mode (shows detailed logs)
DEBUG_MODE=true

# Log level: ERROR, WARNING, INFO, DEBUG, VERBOSE
LOG_LEVEL=DEBUG

# Enable network logging
ENABLE_NETWORK_LOGS=true

# ==============================================================================
# App Configuration
# ==============================================================================

# App environment: development, staging, production
APP_ENVIRONMENT=development

# App name
APP_NAME=ArchFlow

# Support email
SUPPORT_EMAIL=support@archflow.com
